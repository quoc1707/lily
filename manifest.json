{
    "manifest_version": 3,
    "name": "Gin Sour",
    "version": "1.0.0",
    "description": "Save your favourite stories from Facebook.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icons/32.png"
    },
    "permissions": ["declarativeContent", "downloads", "scripting", "storage"],
    "host_permissions": ["*://*.facebook.com/*"]
}
